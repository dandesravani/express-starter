{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "node starter project",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx pnpm add -g pnpm && npx only-allow pnpm",
    "build": "npx tsc -p .",
    "lint": " npx xo",
    "test": "npm run test:ci -- --watch",
    "rs": "node -r esbuild-register",
    "ro": "node -r esbuild-register src/index.ts",
    "test:ci": "npx tap --node-arg='--require=esbuild-register'",
    "dev": "nodemon --exitcrash -x node -r esbuild-register src/index.ts",
    "ci": "npm run build && npm run lint && npm run test:ci"
  },
  "author": "Pervez Iqbal",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.0.1",
    "chance": "1.1.8",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "got": "^12.1.0",
    "lodash": "4.17.21",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.1.0",
    "@types/chance": "1.1.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.36",
    "@types/tap": "15.0.7",
    "esbuild": "0.14.42",
    "esbuild-register": "3.3.2",
    "eslint": "8.16.0",
    "nodemon": "2.0.16",
    "prettier": "2.6.2",
    "tap": "16.2.0",
    "typescript": "4.7.2",
    "webpack": "^5.72.1",
    "xo": "0.49.0"
  },
  "xo": {
    "ignores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.(ts|js)"
    ],
    "space": true,
    "semi": true,
    "arrowParens": "avoid",
    "rules": {
      "@typescript-eslint/semi": "off",
      "import/extensions": "off"
    }
  }
}
